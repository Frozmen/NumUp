<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.coursework.Activity.AfterGameActivity"
    android:clickable="false"
    android:background="@drawable/lol"
    android:onClick="onAgai">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/game_over"
        android:id="@+id/textView2"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="true"
        android:textSize="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/score"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/again_butt"
        android:layout_below="@+id/score"
        android:src="@drawable/again"
        android:background="@null"
        android:paddingRight="25dp"
        android:onClick="onAgainClick"
        android:layout_alignRight="@+id/textView2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_butt"
        android:layout_below="@+id/score"
        android:src="@drawable/home"
        android:background="@null"
        android:layout_alignLeft="@+id/textView2"
        android:paddingLeft="25dp"
        android:onClick="onHomeClick"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/again_butt"
        android:layout_alignLeft="@+id/home_butt"
        android:layout_alignRight="@+id/again_butt"></LinearLayout>

</RelativeLayout>
